int main() {
	int i,j,n,m,k;
	in n;
	i = 2*n-1;
	for(i=1;i<=2*n-1;i = i + 1) {
		k=i;
		m=n;
		if(i>n) {k=2*n-i;}
		for(j=1;j<=n-k;j = j + 1) {out "  ";}
		for(j=1;j<=1+2*(k-1);)
		{
			if(j>(1+2*(k-1))/2)
			{	
				if (m < 10) {out " ";
				}
				out m;
				m = m + 1;
				//printf("%-2d",m++);
				j = j + 1;
			}
			else
			{
				if (m < 10) {out " ";
				}
				out m;
				m = m - 1;
				//printf("%-2d",m--);
				j = j + 1;
			}
		}
		out "\n";
	}
	return 0;
}